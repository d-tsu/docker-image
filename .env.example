# FTPユーザー設定
FTP_USER=ftpuser
FTP_PASS=ftppass
FTP_UID=1000
FTP_GID=1000

# 匿名アクセス設定
# YES: 匿名アクセスを許可, NO: 匿名アクセスを拒否
ANONYMOUS_ENABLE=YES
# YES: 匿名ユーザーのアップロードを許可, NO: 拒否
ANON_UPLOAD_ENABLE=NO
# YES: 匿名ユーザーのディレクトリ作成を許可, NO: 拒否
ANON_MKDIR_WRITE_ENABLE=NO

# ローカルユーザー設定
# YES: ローカルユーザーのログインを許可, NO: 拒否
LOCAL_ENABLE=YES
# YES: 書き込みを許可, NO: 読み取りのみ
WRITE_ENABLE=YES

# パッシブモード設定
PASV_MIN_PORT=21100
PASV_MAX_PORT=21110
# パッシブモード用の外部IPアドレス（Docker環境で必要な場合）
# 例: PASV_ADDRESS=192.168.1.100 または PASV_ADDRESS=example.com
PASV_ADDRESS=

# SSL/TLS設定
# YES: SSL/TLSを有効化, NO: 無効化
SSL_ENABLE=NO
# YES: Implicit SSL (FTPS on port 990), NO: Explicit SSL (FTPES)
IMPLICIT_SSL=NO
